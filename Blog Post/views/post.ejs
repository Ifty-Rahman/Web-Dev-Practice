<div class="container">
    <article class="post-full">
        <div class="post-header-full">
            <h1 class="post-title-full"><%= post.title %></h1>
            <div class="post-meta-full">
                <span class="post-author-full">
                    <i class="fas fa-user"></i>
                    <%= post.author %>
                </span>
                <span class="post-date-full">
                    <i class="fas fa-calendar"></i>
                    <%= new Date(post.createdAt).toLocaleDateString() %>
                </span>
                <% if (post.updatedAt !== post.createdAt) { %>
                    <span class="post-updated">
                        <i class="fas fa-edit"></i>
                        Updated: <%= new Date(post.updatedAt).toLocaleDateString() %>
                    </span>
                <% } %>
            </div>
        </div>

        <div class="post-content-full">
            <p><%= post.content.replace(/\n/g, '</p><p>') %></p>
        </div>

        <div class="post-actions-full">
            <a href="/" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i>
                Back to Posts
            </a>
            <a href="/posts/<%= post.id %>/edit" class="btn btn-secondary">
                <i class="fas fa-edit"></i>
                Edit Post
            </a>
            <form method="POST" action="/posts/<%= post.id %>/delete" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this post?')">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                    Delete Post
                </button>
            </form>
        </div>
    </article>
</div>
